<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:M64RPFW.Views.Avalonia.Converter"
             x:Class="M64RPFW.Views.Avalonia.App"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
    <Application.Resources>
        <conv:StringToKeyGestureConverter x:Key="StringToKeyGestureConverter" />
        <conv:DefaultValueConverter x:Key="DefaultValueConverter" />
        <conv:StringSelectorConverter x:Key="StringSelectorConverter" />
        <conv:BooleanInvertConverter x:Key="BooleanInvertConverter" />
        <Thickness x:Key="SpaceBelowThickness">0,10,0,20</Thickness>
        <Thickness x:Key="ContentPadding">10,10,10,10</Thickness>
    </Application.Resources>
    <Application.Styles>
        <materialIcons:MaterialIconStyles />
        <FluentTheme />

        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="0 4 0 4" />
        </Style>
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0 4 0 4" />
        </Style>
        <Style Selector="TextBlock.h3">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="0 4 0 4" />
        </Style>

    </Application.Styles>
</Application>