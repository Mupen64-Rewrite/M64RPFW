<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:M64RPFW.Views.Avalonia.Controls"
        xmlns:vm="clr-namespace:M64RPFW.ViewModels;assembly=M64RPFW.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="M64RPFW.Views.Avalonia.Views.LuaWindow"
        x:CompileBindings="True"
        x:DataType="vm:LuaViewModel"
        Title="Lua Instance"
        Width="300"
        Height="280"
        Closing="Window_OnClosing">
    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto, Auto, *">

        <controls:FileBrowser Grid.ColumnSpan="3" CurrentPath="{Binding Path}"
                              PickerOptions="{Binding PickerOptions, Mode=OneTime}" />

        <Button Grid.Row="1" Grid.Column="0" Content="Clear" />
        <Button Grid.Row="1" Grid.Column="1" Content="Stop" />
        <Button Grid.Row="1" Grid.Column="2" Content="Start" Command="{Binding RunCommand}" />

        <TextBox Grid.Row="2" Grid.ColumnSpan="3" IsReadOnly="True" x:Name="LogTextBox" />
    </Grid>
</Window>