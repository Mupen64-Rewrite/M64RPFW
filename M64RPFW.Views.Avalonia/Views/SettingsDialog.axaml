<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:M64RPFW.ViewModels;assembly=M64RPFW.ViewModels"
        xmlns:ctrls="clr-namespace:M64RPFW.Views.Avalonia.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="M64RPFW.Views.Avalonia.Views.SettingsDialog"
        x:CompileBindings="True"
        x:DataType="viewModels:SettingsViewModel"
        Title="Settings" Width="500" Height="500"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        Closed="TopLevel_OnClosed">
    <Window.Resources>
        <x:Double x:Key="IconSize">28</x:Double>
    </Window.Resources>
    <Window.Styles>
        <Style Selector="materialIcons|MaterialIcon">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <!-- <Style Selector="ComboBox"> -->
        <!--     <Setter Property="Margin" Value="{StaticResource SpaceBelowThickness}" /> -->
        <!-- </Style> -->
        <!-- <Style Selector="ctrls|FileBrowser"> -->
        <!--     <Setter Property="Margin" Value="{StaticResource SpaceBelowThickness}" /> -->
        <!-- </Style> -->
        <Style Selector="ScrollViewer > StackPanel">
            <Setter Property="Margin" Value="{StaticResource ContentPadding}" />
        </Style>
        <Style Selector="#ShortcutTab ctrls|HotkeyButton">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </Window.Styles>
    <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TabStripPlacement="Top">
        <TabItem Header="{materialIcons:MaterialIconExt Kind=Chip, Size={StaticResource IconSize}}">
            <ScrollViewer>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Classes="h3" Text="Core"/>
                    <ComboBox
                        Items="{Binding EmulatorTypes,Mode=OneTime}"
                        SelectedItem="{Binding CoreType,Mode=TwoWay}" />
                    <CheckBox Content="Disable Expansion Pak memory" />
                    <CheckBox Content="Randomize interrupt timings" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="{materialIcons:MaterialIconExt Kind=Keyboard, Size={StaticResource IconSize}}" Name="ShortcutTab">
            <ScrollViewer>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Classes="h3" Text="Emulator"/>
                    <Grid RowDefinitions="*,*,*,*,*,*,*,*,*" ColumnDefinitions="*,*">
                        <Label Grid.Row="0" Grid.Column="0" Content="Open ROM" />
                        <ctrls:HotkeyButton Grid.Row="0" Grid.Column="1"
                                            CurrentHotkey="{Binding OpenRomHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="1" Grid.Column="0" Content="Close ROM" />
                        <ctrls:HotkeyButton Grid.Row="1" Grid.Column="1"
                                            CurrentHotkey="{Binding CloseRomHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="2" Grid.Column="0" Content="Reset ROM" />
                        <ctrls:HotkeyButton Grid.Row="2" Grid.Column="1"
                                            CurrentHotkey="{Binding ResetRomHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="3" Grid.Column="0" Content="Pause/Resume" />
                        <ctrls:HotkeyButton Grid.Row="3" Grid.Column="1"
                                            CurrentHotkey="{Binding PauseOrResumeHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="4" Grid.Column="0" Content="Frame Advance" />
                        <ctrls:HotkeyButton Grid.Row="4" Grid.Column="1"
                                            CurrentHotkey="{Binding FrameAdvanceHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="5" Grid.Column="0" Content="Load from File" />
                        <ctrls:HotkeyButton Grid.Row="5" Grid.Column="1"
                                            CurrentHotkey="{Binding LoadFromFileHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="6" Grid.Column="0" Content="Save to File" />
                        <ctrls:HotkeyButton Grid.Row="6" Grid.Column="1"
                                            CurrentHotkey="{Binding SaveToFileHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="7" Grid.Column="0" Content="Load Current Slot" />
                        <ctrls:HotkeyButton Grid.Row="7" Grid.Column="1"
                                            CurrentHotkey="{Binding LoadCurrentSlotHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="8" Grid.Column="0" Content="Save Current Slot" />
                        <ctrls:HotkeyButton Grid.Row="8" Grid.Column="1"
                                            CurrentHotkey="{Binding SaveCurrentSlotHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                    </Grid>
                    <TextBlock Classes="h3" Text="Rerecording"/>
                    <Grid RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*">
                        <Label Grid.Row="0" Grid.Column="0" Content="Start Movie" />
                        <ctrls:HotkeyButton Grid.Row="0" Grid.Column="1"
                                            CurrentHotkey="{Binding StartMovieHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="1" Grid.Column="0" Content="Start Recording" />
                        <ctrls:HotkeyButton Grid.Row="1" Grid.Column="1"
                                            CurrentHotkey="{Binding StartRecordingHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="2" Grid.Column="0" Content="Stop Movie" />
                        <ctrls:HotkeyButton Grid.Row="2" Grid.Column="1"
                                            CurrentHotkey="{Binding StopMovieHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="3" Grid.Column="0" Content="Restart Movie" />
                        <ctrls:HotkeyButton Grid.Row="3" Grid.Column="1"
                                            CurrentHotkey="{Binding RestartMovieHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                        <Label Grid.Row="4" Grid.Column="0" Content="Toggle Disable Writes" />
                        <ctrls:HotkeyButton Grid.Row="4" Grid.Column="1"
                                            CurrentHotkey="{Binding DisableWritesHotkey, Converter={StaticResource StringToKeyGestureConverter}}" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="{materialIcons:MaterialIconExt Kind=Plugin, Size={StaticResource IconSize}}">
            <ScrollViewer>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Classes="h3" Text="Video"/>
                    <ctrls:FileBrowser CurrentPath="{Binding VideoPluginPath}" PickerOptions="{Binding DllPickerOptions}" />
                    <TextBlock Classes="h3" Text="Audio"/>
                    <ctrls:FileBrowser CurrentPath="{Binding AudioPluginPath}" PickerOptions="{Binding DllPickerOptions}" />
                    <TextBlock Classes="h3" Text="Input"/>
                    <ctrls:FileBrowser CurrentPath="{Binding InputPluginPath}" PickerOptions="{Binding DllPickerOptions}" />
                    <TextBlock Classes="h3" Text="RSP"/>
                    <ctrls:FileBrowser CurrentPath="{Binding RspPluginPath}" PickerOptions="{Binding DllPickerOptions}" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        
        <!-- <TabItem Header="{materialIcons:MaterialIconExt Kind=Video}"> -->
        <!-- </TabItem> -->
        <!-- <TabItem Header="{materialIcons:MaterialIconExt Kind=Audio}"> -->
        <!-- </TabItem> -->
        <!-- <TabItem Header="{materialIcons:MaterialIconExt Kind=Gamepad}"> -->
        <!-- </TabItem> -->
        <!-- <TabItem Header="{materialIcons:MaterialIconExt Kind=Cpu64Bit}"> -->
        <!-- </TabItem> -->
    </TabControl>
</Window>