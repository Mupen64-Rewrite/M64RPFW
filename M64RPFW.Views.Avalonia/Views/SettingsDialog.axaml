<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:M64RPFW.ViewModels;assembly=M64RPFW.ViewModels"
        xmlns:ctrls="clr-namespace:M64RPFW.Views.Avalonia.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        d:DataContext="{x:Type viewModels:SettingsViewModel}"
        x:Class="M64RPFW.Views.Avalonia.Views.SettingsDialog"
        Title="Settings" Width="500" Height="500"
        Closed="TopLevel_OnClosed">
    <Window.Resources>
        <Thickness x:Key="SpaceBelowThickness">0,10,0,20</Thickness>
        <Thickness x:Key="TabItemPadding">10,10,10,10</Thickness>
    </Window.Resources>
    <Window.Styles>
        <Style Selector="ComboBox">
            <Setter Property="Margin" Value="{StaticResource SpaceBelowThickness}"/>
        </Style>
        <Style Selector="ctrls|FileBrowser">
            <Setter Property="Margin" Value="{StaticResource SpaceBelowThickness}"/>
        </Style>
        <Style Selector="TabItem > StackPanel">
            <Setter Property="Margin" Value="{StaticResource TabItemPadding}"/>
        </Style>
    </Window.Styles>
    <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TabStripPlacement="Left">
        <TabItem Header="General">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Core type:"/>
                <ComboBox 
                    Items="{Binding EmulatorTypes,Mode=OneTime}" 
                    SelectedItem="{Binding CoreType,Mode=TwoWay}"/>
                <CheckBox Content="Disable Expansion Pak memory"/>
                <CheckBox Content="Randomize interrupt timings"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Plugins">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <TextBlock Text="Video plugin"/>
                <ctrls:FileBrowser CurrentPath="{Binding VideoPluginPath}"/>
                <TextBlock Text="Audio plugin"/>
                <ctrls:FileBrowser CurrentPath="{Binding AudioPluginPath}"/>
                <TextBlock Text="Input plugin"/>
                <ctrls:FileBrowser CurrentPath="{Binding InputPluginPath}"/>
                <TextBlock Text="RSP plugin"/>
                <ctrls:FileBrowser CurrentPath="{Binding RspPluginPath}"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Video">
        </TabItem>
    </TabControl>
</Window>
