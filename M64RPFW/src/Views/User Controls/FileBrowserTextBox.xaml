<UserControl x:Class="M64RPFW.Views.User_Controls.FileBrowserTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Name="root"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox Text="{Binding ElementName=root, Path=Path, Mode=TwoWay}" />
        <Button Grid.Column="1" Content="{iconPacks:Material Kind=DotsHorizontal}"
                Command="{Binding ElementName=root, Path=BrowseCommand}"
                CommandParameter="{Binding ElementName=root, Path=BrowseCommandParameter}" />
    </Grid>
</UserControl>