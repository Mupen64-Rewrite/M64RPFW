<UserControl x:Class="M64RPFW.src.Views.User_Controls.FileBrowserTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Name="root"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Text="{Binding ElementName=root, Path=Path, Mode=TwoWay}" Width="130" Margin="0 0 2 0"/>
        <Button Grid.Column="1" Content="{iconPacks:Material Kind=DotsHorizontal}" Command="{Binding ElementName=root, Path=BrowseCommand}"/>
    </Grid>
</UserControl>
